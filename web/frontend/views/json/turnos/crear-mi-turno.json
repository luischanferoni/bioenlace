{
  "steps": [
    {
      "step": 0,
      "title": "Seleccionar Servicio y Efector",
      "fields": ["id_servicio_asignado", "id_efector"]
    },
    {
      "step": 1,
      "title": "Seleccionar Profesional y Fecha",
      "fields": ["id_rr_hh", "fecha"]
    },
    {
      "step": 2,
      "title": "Seleccionar Hora",
      "fields": ["hora"]
    }
  ],
  "fields": [
    {
      "name": "id_servicio_asignado",
      "label": "Servicio",
      "type": "select",
      "required": true,
      "options": "{{options}}",
      "option_config": {
        "source": "servicios",
        "filter": "efector_servicios"
      }
    },
    {
      "name": "id_efector",
      "label": "Efector",
      "type": "autocomplete",
      "required": true,
      "endpoint": "/efectores/search",
      "depends_on": "id_servicio_asignado",
      "params": { "id_servicio": "id_servicio_asignado" },
      "auto_load": true,
      "option_config": {
        "source": "efectores",
        "filter": "user_efectores"
      }
    },
    {
      "name": "id_rr_hh",
      "label": "Profesional",
      "type": "autocomplete",
      "required": true,
      "endpoint": "/rrhh/rrhh-autocomplete",
      "depends_on": "id_servicio_asignado",
      "option_config": {
        "source": "rrhh",
        "filter": "efector_rrhh"
      }
    },
    {
      "name": "fecha",
      "label": "Fecha",
      "type": "date",
      "required": true,
      "format": "YYYY-MM-DD",
      "min": "today"
    },
    {
      "name": "hora",
      "label": "Hora",
      "type": "time",
      "required": true,
      "depends_on": "fecha"
    }
  ]
}
